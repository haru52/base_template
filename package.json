{
  "name": "base-template",
  "version": "0.1.0",
  "description": "Base template repository.",
  "private": true,
  "engines": {
    "node": "^16.14.2",
    "npm": "^8.5.0"
  },
  "main": "index.js",
  "scripts": {
    "lint": "run-s -c lint:*",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \".github/**/*.md\"",
    "lint:prettier": "prettier -c .",
    "format": "run-s -c format:*",
    "format:md": "markdownlint-cli2-fix \"**/*.md\" \".github/**/*.md\"",
    "format:prettier": "prettier -w .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "commit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haru52/base_template.git"
  },
  "keywords": [
    "template"
  ],
  "author": "haru",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/haru52/base_template/issues"
  },
  "homepage": "https://github.com/haru52/base_template#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/prompt-cli": "^16.2.3",
    "husky": "^7.0.0",
    "markdownlint-cli2": "^0.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2"
  }
}
