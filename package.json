{
  "name": "base-template",
  "version": "0.1.0",
  "description": "Base template repository.",
  "private": true,
  "engines": {
    "node": "^16.15.0",
    "npm": "^8.5.5"
  },
  "main": "index.js",
  "scripts": {
    "lint": "run-s -c lint:*",
    "lint:credential": "secretlint \"**/*\"",
    "lint:md": "markdownlint . \".?*/**/*.{md,markdown}\"",
    "lint:prettier": "prettier -c .",
    "format": "run-s -c format:*",
    "format:md": "npm run lint:md -- -f",
    "format:prettier": "prettier -w .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "cz",
    "cm": "npm run commit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haru52/base_template.git"
  },
  "keywords": [
    "template"
  ],
  "author": "haru",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/haru52/base_template/issues"
  },
  "homepage": "https://github.com/haru52/base_template#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/cz-commitlint": "^16.2.3",
    "@secretlint/secretlint-rule-preset-recommend": "^5.2.0",
    "commitizen": "^4.2.4",
    "husky": "^7.0.0",
    "lint-staged": "^12.4.0",
    "markdownlint-cli": "^0.31.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "secretlint": "^5.2.0"
  }
}
