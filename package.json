{
  "name": "base-template",
  "version": "1.0.0",
  "description": "Fully automated template repository which provides full compliance with the community standards.",
  "private": true,
  "engines": {
    "node": "^16.15.0",
    "npm": "^8.5.5"
  },
  "main": "index.js",
  "scripts": {
    "lint": "run-s --continue-on-error lint:*",
    "lint:credentials": "[ \"$CI\" = 'true' ] || secretlint \"**/*\"",
    "lint:md": "markdownlint . \".?*/**/*.{md,markdown}\"",
    "lint:prettier": "prettier --check .",
    "format": "run-s --continue-on-error format:*",
    "format:md": "npm run lint:md -- --fix",
    "format:prettier": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "cz",
    "cm": "npm run commit",
    "prepare": "[ \"$CI\" = 'true' ] || husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haru52/base_template.git"
  },
  "keywords": [
    "template"
  ],
  "author": "haru",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/haru52/base_template/issues"
  },
  "homepage": "https://github.com/haru52/base_template#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@commitlint/cz-commitlint": "^16.2.4",
    "@secretlint/secretlint-rule-preset-recommend": "^5.2.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "commitizen": "^4.2.4",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "markdownlint-cli": ">=0.31.1 <1.0.0",
    "npm-check-updates": "^12.5.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "secretlint": "^5.2.0",
    "semantic-release": "^19.0.2"
  }
}
